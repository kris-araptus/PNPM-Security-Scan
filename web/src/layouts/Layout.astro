---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Scan your npm dependencies for known malicious packages and supply chain threats." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/araptus-icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <title>{title} | Araptus Security Scanner</title>
    <meta name="theme-color" content="#570df8" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | Araptus Security Scanner`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
  </head>
  <body class="min-h-screen">
    <div class="min-h-screen flex flex-col">
      <!-- Header -->
      <header class="border-b border-slate-dark/50 backdrop-blur-md sticky top-0 z-50 bg-void/90">
        <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
          <a href="/" class="flex items-center gap-3 group">
            <!-- Araptus Logo -->
            <img 
              src="/araptus-logo.svg" 
              alt="Araptus" 
              class="h-7 araptus-logo"
            />
            <span class="text-text-muted text-sm hidden sm:inline">Security Scanner</span>
          </a>
          
          <nav class="flex items-center gap-6">
            <a 
              href="https://araptus.com" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-text-secondary hover:text-araptus-glow transition-colors text-sm font-medium hidden sm:block"
            >
              araptus.com
            </a>
            <a 
              href="https://github.com/kris-araptus/pnpm-security-scan" 
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-dark/50 hover:bg-slate-dark transition-colors text-text-secondary hover:text-text-primary"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              <span class="hidden sm:inline text-sm">GitHub</span>
            </a>
          </nav>
        </div>
      </header>

      <!-- Main Content -->
      <main class="flex-1">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="border-t border-slate-dark/50 mt-auto bg-obsidian/50">
        <div class="max-w-6xl mx-auto px-4 py-8">
          <!-- Two-column attribution -->
          <div class="grid sm:grid-cols-2 gap-8 mb-8">
            <!-- Araptus - Web Development -->
            <div class="flex items-start gap-4">
              <img 
                src="/araptus-icon.png" 
                alt="Araptus" 
                class="w-12 h-12 rounded-xl"
              />
              <div>
                <a href="https://araptus.com" target="_blank" rel="noopener" class="text-araptus-glow hover:underline font-semibold text-lg">
                  Araptus
                </a>
                <p class="text-text-secondary text-sm mt-1">
                  Web Development
                </p>
                <p class="text-text-muted text-xs mt-2">
                  Modern web applications built with Astro, React, and Tailwind CSS.
                </p>
                <div class="flex items-center gap-3 mt-3">
                  <a href="https://araptus.com/services" target="_blank" rel="noopener" class="text-text-muted hover:text-text-secondary transition-colors text-xs">
                    Services
                  </a>
                  <a href="https://araptus.com/contact" target="_blank" rel="noopener" class="text-text-muted hover:text-text-secondary transition-colors text-xs">
                    Contact
                  </a>
                  <a href="https://github.com/kris-araptus" target="_blank" rel="noopener" class="text-text-muted hover:text-text-secondary transition-colors text-xs">
                    GitHub
                  </a>
                </div>
              </div>
            </div>
            
            <!-- FEDLIN - Enterprise Security -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-[#0f172a] flex items-center justify-center p-2 border border-[#4f8dfd]/20">
                <img 
                  src="/fedlin-icon.svg" 
                  alt="FEDLIN" 
                  class="w-full h-full object-contain"
                />
              </div>
              <div>
                <a href="https://fedlin.com" target="_blank" rel="noopener" class="text-[#4f8dfd] hover:underline font-semibold text-lg">
                  FEDLIN
                </a>
                <p class="text-text-secondary text-sm mt-1">
                  Enterprise Security for SaaS
                </p>
                <p class="text-text-muted text-xs mt-2">
                  WAF, security headers, penetration testing & cloud hardening. A+ ratings in days.
                </p>
                <div class="flex items-center gap-3 mt-3">
                  <a href="https://fedlin.com/services" target="_blank" rel="noopener" class="text-text-muted hover:text-text-secondary transition-colors text-xs">
                    Services
                  </a>
                  <a href="https://fedlin.com/#contact" target="_blank" rel="noopener" class="text-text-muted hover:text-text-secondary transition-colors text-xs">
                    Contact
                  </a>
                  <a href="https://github.com/fedlinllc" target="_blank" rel="noopener" class="text-text-muted hover:text-text-secondary transition-colors text-xs">
                    GitHub
                  </a>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Bottom bar -->
          <div class="pt-6 border-t border-slate-dark/50 flex flex-col sm:flex-row items-center justify-between gap-4">
            <p class="text-text-muted text-xs">
              Â© 2025 Araptus & FEDLIN. Open source under MIT License.
            </p>
            <p class="text-text-muted text-xs">
              Protecting developers from supply chain attacks
            </p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
